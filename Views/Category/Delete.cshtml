@model PhishFood.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="add-content">
    <div class="wrapper">
        <h1>@ViewData["Title"]</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Category</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Type)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Type)
                </dd>
            </dl>
    
            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="CategoryView" asp-controller="Subcategory" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>