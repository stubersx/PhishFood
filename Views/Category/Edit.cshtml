@model PhishFood.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="add-content">
    <div class="wrapper edit">
        <h1>@ViewData["Title"] <i class="fa fa-file-text-o"></i></h1>
        <hr />
        <div class="row">
            <div class="offset-lg-3 col-lg-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group create">
                        <label asp-for="Type" class="control-label"></label>
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group btns">
                        <input type="submit" value="Save" class="btn btn-outline-primary" />
                        <a asp-action="Delete" asp-route-id="@Model?.ID" class="btn btn-outline-danger">Delete</a>
                        <a asp-action="CategoryView" asp-controller="Subcategory" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
