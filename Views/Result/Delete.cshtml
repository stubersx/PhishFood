@model PhishFood.Models.Result

@{
    ViewData["Title"] = "Delete Result";
}

@section style {
    <style>
        body {
            background: url('/images/hawkowl.png') no-repeat;
            background-size: contain;
            background-position: center;
        }

        dl {
            font-size: 1.1rem;
        }
    </style>
}

<h1 class="text-center mt-5 mb-4">@ViewData["Title"] <i class="fa fa-trash"></i></h1>

<h3 class="text-center">Are you sure you want to delete <span style="color: red;">this result</span>?</h3>
<hr />
<dl class="row my-5">
    <dt class="offset-md-4 col-md-2">
        @Html.DisplayNameFor(model => model.Date):
    </dt>
    <dd class="col-md-6">
        @Html.DisplayFor(model => model.Date)
    </dd>
    <dt class="offset-md-4 col-md-2">
        @Html.DisplayNameFor(model => model.Score):
    </dt>
    <dd class="col-md-6">
        @Html.DisplayFor(model => model.Score)
    </dd>
    <dt class="offset-md-4 col-md-2">
        @Html.DisplayNameFor(model => model.Category):
    </dt>
    <dd class="col-md-6">
        @Html.DisplayFor(model => model.Category.Type)
    </dd>
    <dt class="offset-md-4 col-md-2">
        @Html.DisplayNameFor(model => model.Student.ID):
    </dt>
    <dd class="col-md-6">
        @Html.DisplayFor(model => model.Student.ID)
    </dd>
</dl>
<div class="form-group btns mb-5">
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>
