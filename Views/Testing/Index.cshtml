@model IEnumerable<PhishFood.Models.Testing>

@{
    ViewData["Title"] = "Index";
}
<head>
    <style>
        .center {
            display: flex;
            align-content: center;
            justify-content: center;
        }

        .create-button {
            border: none;
            box-shadow: 1px 1px 1px;
            background-color: #008165;
            border-radius: 5px;
            padding: 5px 10px;
        }

        .submit-button {
            background-color: #008165;
            border: none;
            box-shadow: 1px 1px 1px;
            border-radius: 5px;
            color: white;
            padding: 5px 10px;
        }
    </style>
</head>
<h1 style="text-align: center;">Test Questions</h1>
<hr />
<p style="text-align: center;">
    <button class="create-button"><a asp-action="Create" style="text-decoration: none; color: white; font-size: 18px;">Create New</a></button>
</p>
<div class="center">
    <!-- Search Form -->
    <form method="get">
        <button type="submit" class="submit-button">Search</button>
        <input type="text" name="searchQuery" value="@ViewData["searchQuery"]" placeholder="Search..." />
    </form>
</div>
<div class="center">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Question)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubCategory)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubCategory.Type)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Results found</p>
    }
</div>