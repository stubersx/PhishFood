@model PhishFood.Models.Subcategory

@{
    ViewData["Title"] = "Delete Subcategory";
}

@section style {
    <style>
        body {
            background: url('/images/hawkowl.png') no-repeat;
            background-size: contain;
            background-position: center;
        }
    </style>
}

<h1 class="text-center mt-5">@ViewData["Title"] <i class="fa fa-trash"></i></h1>
<h3 class="text-center my-5">Are you sure you want to delete <span style="color: red;">@Html.DisplayFor(model => model.Type)</span>?</h3>
<p class="text-center" style="font-size: 1.1rem;"><span class="fw-bold">@Html.DisplayNameFor(model => model.Category): </span>@Html.DisplayFor(model => model.Category.Type)</p>
<div class="form-group btns my-5">
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="CategoryView" asp-controller="Subcategory" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>
