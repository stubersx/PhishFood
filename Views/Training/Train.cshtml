@model IEnumerable<PhishFood.Models.Training>

@{
    ViewData["Title"] = "Training Content";
}

@section style {
    <style>
        body {
            background: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .slideshow-container {
            position: relative;
            max-width: 70%;
            margin: 40px auto;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 2px 2px 12px rgba(0,0,0,0.1);
            padding: 30px 40px;
            user-select: none;
            border: 1px solid #dee2e6;
        }

        .slides {
            display: none;
            animation: fadeIn 0.5s ease-in-out;
        }

        .slides.active {
            display: block;
        }

        .slides h1, .slides h3 {
            color: #343a40;
            margin-bottom: 15px;
        }

        .num {
            font-weight: bold;
            color: #6c757d;
            font-size: 0.95rem;
            margin-bottom: 12px;
        }

        .content {
            background: #f1f1f1;
            border-radius: 10px;
            padding: 25px 30px;
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.05);
            border: 1px solid #ccc;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

        .content:hover {
            background-color: #e9ecef;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1050;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0, 0, 0, 0.6);
            align-items: center;
            justify-content: center;
            animation: fadeInModal 0.3s ease-in-out;
        }

        .modal-content {
            background: #ffffff;
            color: #212529;
            border-radius: 15px;
            width: 90%;
            max-width: 720px;
            max-height: 80vh;
            overflow-y: auto;
            padding-top: 0px;
            padding-right: 20px;
            padding-bottom: 30px;
            padding-left: 20px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
            animation: slideUp 0.4s ease;
            position: relative;
        }

        .prev, .next {
            cursor: pointer;
            font-size: 1.2rem;
            padding: 8px 16px;
            border-radius: 6px;
            background-color: #6c757d;
            color: #fff;
            position: fixed;
            top: 50%;
            transform: translateY(-50%);
            z-index: 1100;
            box-shadow: 0 2px 6px rgba(0,0,0,0.3);
        }

        .prev:hover, .next:hover {
            background-color: #495057;
        }

        .prev {
            left: 20px;
        }

        .next {
            right: 20px;
        }

        aside.section {
            max-width: 800px;
            margin: 30px auto;
            background: #ffffff;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 20px 25px;
            box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
            color: #212529;
        }

        aside.section button {
            background-color: #f8f9fa;
            border: 2px solid #0d6efd;
            color: #0d6efd;
            padding: 10px 20px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        aside.section button:hover {
            background-color: #0d6efd;
            color: white;
        }

        .dot {
            height: 15px;
            width: 15px;
            margin: 0 6px;
            background-color: #adb5bd;
            border-radius: 50%;
            display: inline-block;
            cursor: pointer;
        }

        .dot:hover, .dot.active {
            background-color: #0d6efd;
            box-shadow: 0 0 6px #0d6efd;
        }

        .btn-outline-light {
            font-size: 1.1rem;
            border-radius: 10px;
            padding: 10px 25px;
            background-color: #008365;
            border: none;
            color: white;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

        .btn-outline-light:hover {
            background-color: #388e3c;
        }
        .content img,
        .modal-body img {
            max-width: 100%;
            height: auto;
            display: block;
            margin: 10px auto;
        }

        @@media (max-width: 700px) {
            .slideshow-container {
                padding: 20px;
                max-width: 95%;
            }

            .modal-content {
                width: 90%;
            }

            .prev, .next {
                position: static;
                width: auto;
                display: block;
                margin: 10px auto;
                text-align: center;
            }
        }
        @@media (max-width: 1100px) {
            .filter-form {
                flex-direction: column !important;
                align-items: center;
            }

            .filter-group {
                width: 100%;
                margin-bottom: 10px;
            }

            .filter-group select {
                width: 100% !important;
            }

            .filter-form button {
                width: 100%;
            }
        }
    </style>
}

<div class="page mb-5 text-center">
    <a class="prev" onclick="plusSlides(-1)">❮ Previous</a>
    <a class="next" onclick="plusSlides(1)">Next ❯</a>
</div>

<aside class="section text-center mb-4">
    <p>1. Look at the box and think why this email is suspicious.</p>
    <p>2. Click on the box to check the answer!</p>
</aside>

<div class="slideshow-container">

    <div class="slides fade-in active text-center">
        <h1 class="display-4 mb-4">Study Training Content</h1>
        <hr />
        <form asp-action="Train" method="get" class="filter-form d-flex justify-content-center mb-4 gap-2">
            <div class="filter-group">
                <select name="categoryId" class="form-select w-auto" onchange="this.form.submit()">
                    <option value="">-- Select Category --</option>
                    @foreach (var category in (SelectList)ViewBag.Categories)
                    {
                        var selected = Context.Request.Query["categoryId"] == category.Value ? "selected" : "";
                        @:<option value="@category.Value" @selected>@category.Text</option>
                    }
                </select>
            </div>
            <div class="filter-group">
                <select name="subcategoryId" class="form-select w-auto" onchange="this.form.submit()">
                    <option value="">-- Select Subcategory --</option>
                    @foreach (var sub in (SelectList)ViewBag.Subcategories)
                    {
                        var selected = Context.Request.Query["subcategoryId"] == sub.Value ? "selected" : "";
                        @:<option value="@sub.Value" @selected>@sub.Text</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-outline-dark">Filter</button>
        </form>

        <div class="mb-3" style="color: black;">
            <p>1. Select which subject you'd like to study from above.</p>
            <p>2. Navigate subject content with the directional buttons.</p>
            <p>3. Take the corresponding unit test.</p>

        </div>
    </div>

    @{
        var i = 0;
    }

    @foreach (var item in Model)
    {
        i++;
        <div class="slides fade-in">
            <div class="num text-center">@i / @ViewBag.Count</div>
            <div class="content" onclick="showModal(@i)">
                <h3 class="text-center">@Html.DisplayFor(modelItem => item.Name)</h3>
                <hr />
                @Html.Raw(item.Content)
            </div>
            <br />
            <div class="center">
                <button onclick="showModal(@i)" class="btn-outline-light btn">See Explanation</button>
            </div>
        </div>

        <div class="modal" id="modal-@i">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" onclick="closeModal()">&times;</button>
                </div>
                <div class="modal-body">

                    <h4 class="mb-3 text-center">@Html.DisplayFor(modelItem => item.Name) Explanation</h4>
                    <div>@Html.Raw(item.Notes)</div>

                </div>
            </div>
        </div>
    }

    <div class="slides fade-in text-center">
        <div class="content">
            <h3>Now you're ready to take the test!</h3>
            <p>Click the button below to continue.</p>
            <p><a class="btn btn-outline-light" asp-action="TestSelection" asp-controller="Testing">Begin Test</a></p>
            <div class="mt-4">
                <p>You can review the training pages from links below:</p>
                <span class="dot" onclick="currentSlide(1)"></span>
                @for (int j = 1; j <= ViewBag.Count; j++)
                {
                    <span class="dot" onclick="currentSlide(@j + 1)"></span>
                }
            </div>
        </div>
    </div>
</div>
