@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background: linear-gradient(to bottom right, #e8f5e9, #008365);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    .forest-card {
        background-color: #ffffff;
        border: 2px solid #388e3c;
        border-radius: 20px;
        box-shadow: 0 4px 12px rgba(56, 142, 60, 0.3);
    }

    .forest-btn {
        background-color: #008365;
        border: none;
        color: white;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .forest-btn:hover {
            background-color: #388e3c;
        }

    .forest-heading {
        color: #008365;
        font-weight: bold;
    }

    .forest-link {
        color: #1b5e20;
        text-decoration: underline;
    }

        .forest-link:hover {
            color: #2e7d32;
        }
</style>

<h1 class="text-center forest-heading mt-4">@ViewData["Title"]</h1>

<div class="d-flex justify-content-center align-items-center mt-4" style="min-height: 75vh;">
