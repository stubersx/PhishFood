@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-color: #f4f6f8;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .register-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: calc(100vh - 60px);
        padding: 1rem;
    }

    .register-card {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        width: 100%;
        max-width: 450px;
        max-height: calc(100vh - 60px);
        overflow-y: auto;
    }

    .register-title {
        text-align: center;
        color: #008365;
        font-weight: 600;
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
    }

    .google-section-title {
        font-size: 1.25rem;
        color: #333;
        font-weight: 500;
        margin-top: 1.5rem;
        text-align: center;
    }

    .btn-google {
        background-color: #008365;
        color: white;
        font-weight: 500;
        border: none;
        padding: 0.75rem;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .btn-google:hover {
        color: white;
        background-color: #008365;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(46, 125, 50, 0.3);
    }

    .btn-google:active {
        transform: scale(0.98);
    }

    hr {
        margin: 1.5rem 0;
        border-top: 1px solid #e0e0e0;
    }

    .text-muted {
        font-size: 0.9rem;
        color: #777;
    }

    .accent-link {
        color: #2e7d32;
        text-decoration: underline;
    }

    .accent-link:hover {
        color: #1b5e20;
    }
</style>

<div class="register-container">
    <div class="register-card">
        <div class="register-title">@ViewData["Title"]</div>

        <section>
            <div class="google-section-title">Register with Google</div>
            <hr />
            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div class="text-center text-muted">
                    No external authentication services are configured.<br />
                    See this
                    <a class="accent-link" href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">
                        setup guide
                    </a>.
                </div>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-grid gap-3">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-google w-100" name="provider" value="@provider.Name"
                                title="Register using your @provider.DisplayName account">
                            Register with @provider.DisplayName
                        </button>
                    }
                </form>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
